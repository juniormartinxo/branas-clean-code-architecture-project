{
  "name": "branas-clean-code-architecture-project",
  "version": "1.0.0",
  "description": "Projeto proposto para o curso Clean Code Architecture",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsc -w dist/index.js",
    "commit": "git-cz",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [],
  "author": "Junior Martins <amjr.box@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/sensible": "^5.0.0",
    "@prisma/client": "^4.12.0",
    "fastify": "^4.15.0",
    "fastify-cli": "^5.7.1",
    "fastify-jwt": "^4.2.0",
    "fastify-plugin": "^4.0.0",
    "fastify-swagger": "^5.2.0",
    "fastify-zod": "^1.3.2",
    "zod": "^3.21.4",
    "zod-to-json-schema": "^3.20.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@jest/globals": "^29.5.0",
    "@types/fastify-jwt": "^0.8.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/tap": "^15.0.8",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "maxHeaderWidth": 100,
      "maxLineWidth": 100
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix ",
    "*.{js,css,md,html,json}": "prettier --cache --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    }
  }
}
